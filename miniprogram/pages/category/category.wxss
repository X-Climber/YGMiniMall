page {
  height: 100%;
}

.cates {
  height: 100%;
}

.cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}

.left_menu {
  flex: 2;
}

.left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}

.right_concent {
  flex: 5;
}

.goods_group {}

.goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.delimiter{
  color: #ccc;
  padding: 0 10rpx;
}
.title{

}

.goods_list {
  display: flex;
  flex-wrap: wrap;
}

.goods_list navigator  {
  display: flex;
  flex-wrap: wrap;
  width: 33.333%;
  margin-top: 50rpx;
  text-align: center;
  position: relative;
}
navigator image{
  width: 50%;
  text-align: center;
}
.goods_name {
  position: absolute;
  top: 80rpx;
}