<view class="goods_detail">
	<!-- 轮播图 -->
	<swiper autoplay circular interval="3000" indicator-dots indicator-active-color="#ff5777">
		<block wx:for="{{goodsObj.pics}}" wx:key="pics_id">
			<swiper-item bindtap="handlePreviewImage" data-url="{{item.pics_mid}}">
				<image mode="widthFix" src="{{item.pics_mid}}"></image>
			</swiper-item>
		</block>
	</swiper>
</view>
<!-- 商品价格 -->
<view class="goods_price">
	￥{{goodsObj.goods_price}}
</view>
<!-- 商品名称 -->
<view class="goods_name_row">
	<view class="goods_name">{{goodsObj.goods_name}}</view>
	<view class="goods_collect">
		<text class="iconfont icon-star"></text>
		<view class="collect_text">收藏</view>
	</view>
</view>
<!-- 图文详解 -->
<view class="goods_info">
	<view class="goods_info_title">图文详解</view>
	<view class="goods_info_concent">
		<rich-text nodes="{{goodsObj.goods_introduce}}"></rich-text>
	</view>
</view>
<!-- 底部工具栏 -->
<view class="btm_tool">
	<view class="tool_item">
		<view class="iconfont icon-kefu"></view>
		<view>客服</view>
    <button open-type="contact"></button>
	</view>
	<view class="tool_item">
		<view class="iconfont icon-ico-"></view>
		<view>分享</view>
    <button open-type="share"></button>
	</view>
	<navigator open-type="switchTab" url="/pages/cart/cart" class="tool_item">
		<view class="iconfont icon-che"></view>
		<view>购物车</view>
	</navigator>
	<view class="tool_item btn_cart" bindtap="handleCartAdd">
		加入购物车
	</view>
	<view class="tool_item btn_buy">
		立即购买
	</view>
</view>