page {
  padding-bottom: 90rpx;
}

swiper {
  height: 70vw;
  text-align: center;

}

image {
  width: 70%;
}

.goods_price {
  font-size: 32rpx;
  font-weight: 600;
  padding: 15rpx;
  color: var(--themeColor);
}

.goods_name_row {
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}

.goods_name {
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 10rpx;
  border-right: 1rpx solid #000;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.collect_text {
  padding-top: 15rpx;
}
.goods_info_title {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
  /* margin-top: 10rpx; */
  border-bottom: 1rpx solid #000;
  height: 80rpx;
  line-height: 80rpx;
}

.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  font-size: 24rpx;
  border-top: 1rpx solid #ccc;
}


.tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #fff;
  font-weight: 600;
  font-size: 30rpx;
}

.btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-weight: 600;
  font-size: 30rpx;
}